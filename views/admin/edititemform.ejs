<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs") %>
        <title>All Menu Categories</title>
</head>

<body>
    <%- include("./partials/sidebar.ejs") %>
        <main class="main users chart-page" id="skip-target">
            <div class="container">
                <h2 class="main-title">Dashboard</h2>

                <!-- Main Form Section -->
                <main class="page-center">
                    <form class="sign-up-form form" action="/admin/updateitem/<%= selectedmenu._id %>" method="POST"
                        enctype="multipart/form-data">
                        <h3>Add Menu</h3>

                        <!-- Category Dropdown -->

                        <label class="form-label-wrapper">
                            <p class="form-label">Item Name</p>
                            <input class="form-input" name="itemname" type="text" placeholder="Enter Product Name"
                                required value="<%= selectedmenu.itemname %>">
                        </label>
                        <label class="form-label-wrapper">
                            <p class="form-label">MRP</p>
                            <input class="form-input" name="mrp" type="number" step="0.01" placeholder="Enter MRP"
                                required value="<%= selectedmenu.mrp %>">
                        </label>
                        <label class="form-label-wrapper">
                            <p class="form-label">Description</p>
                            <input class="form-input" name="disc" type="text" placeholder="Enter Discription" required
                                value="<%= selectedmenu.disc %>">
                        </label>
                        <label class="form-label-wrapper">
                            <p class="form-label">Product Image</p>
                            <input class="form-input" type="file" name="image" accept="image/*">
                        </label>

                        <!-- Show previously uploaded image -->
                        <% if (selectedmenu.image) { %>
                            <div style="margin-top: 5px;">
                                <p>Current Image:</p>
                                <img src="<%= selectedmenu.image %>" alt="Product Image"
                                    style="max-width: 80px; border-radius: 6px;">
                            </div>
                            <% } %>

                                <button class="form-btn primary-default-btn transparent-btn">Add Item</button>
                    </form>
                </main>
            </div>
        </main>

        <%- include("./partials/footer.ejs") %>
            <%- include("./partials/script.ejs") %>


</body>

</html>