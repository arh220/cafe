<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs") %>
        <title>Admin</title>
</head>

<body>
    <%- include("./partials/sidebar.ejs") %>

        <!-- ! Main -->
        <main class="main users chart-page" id="skip-target">
            <div class="container">
                <h2 class="main-title">Dashboard</h2>
                <div class="row">
                    <div class="col-lg-9">
                        <div class="users-table table-wrapper ms-5 w-100">
                            <table class="posts-table">
                                <thead>
                                    <tr class="users-table-info">
                                        <th>No</th>
                                        <th>Blog Image</th>
                                        <th>Title</th>
                                        <th>Disc</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (allBlogs && allBlogs.length>0) { %>
                                        <% allBlogs.forEach((item,index)=> { %>
                                            <tr>
                                                <td class="text-start">
                                                    <%= index+1 %>
                                                </td>
                                                <td>
                                                    <div class="categories-table-img">
                                                        <img src="<%= item.image %>" alt="category">
                                                    </div>
                                                </td>
                                                <td>
                                                    <%= item.title %>
                                                </td>
                                                <td>
                                                    <%= item.disc %>
                                                </td>
                                                <td>
                                                    <a href="/admin/editblog/<%= item._id %>"><i
                                                            class="fa-solid fa-pen-to-square"></i></a>&nbsp;&nbsp;
                                                    <a href="/admin/deleteblog/<%= item._id %>"><i
                                                            class="fa-solid fa-trash"></i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <%- include("./partials/footer.ejs") %>
            <%- include("./partials/script.ejs") %>

</body>

</html>