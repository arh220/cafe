<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs") %>
        <title>Admin</title>
</head>

<body>
    <%- include("./partials/sidebar.ejs") %>

        <!-- ! Main -->
        <main class="main users chart-page" id="skip-target">
            <div class="container">
                <h2 class="main-title">Dashboard</h2>
                <div class="row">
                    <div class="col-lg-9">
                        <div class="users-table table-wrapper" style="width: 100%;">
                            <table class="posts-table" style="width: 100%;">
                                <thead>
                                    <tr class="users-table-info">
                                        <th style="width: 5%;">No</th>
                                        <th style="width: 30%;">Email</th>
                                        <th style="width: 20%;">Blog Title</th>
                                        <th style="width: 30%;">Comments</th>
                                        <th style="width: 15%;">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (allcoments&&allcoments.length>0) { %>
                                        <% allcoments.forEach((comt,index)=> { %>
                                            <tr>
                                                <td>
                                                    <%= index+1 %>
                                                </td>
                                                <td>
                                                    <%= comt.email %>
                                                </td>
                                                <td>
                                                    <%= comt.blogId.title %>
                                                </td>
                                                <td>
                                                    <%= comt.comment %>
                                                </td>
                                                <td>
                                                    <a href="/admin/deletecomt/<%= comt._id %>"><i
                                                            class="fa-solid fa-trash"></i></a>
                                                </td>
                                            </tr>
                                            <% }) %>
                                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <%- include("./partials/footer.ejs") %>
            <%- include("./partials/script.ejs") %>

</body>

</html>