<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs") %>

        <title>Sign up page</title>
</head>

<body>
    <%- include("./partials/nav.ejs") %>
        <section class="home-slider owl-carousel">

            <div class="slider-item" style="background-image: url(images/bg_3.jpg);"
                data-stellar-background-ratio="0.5">
                <div class="overlay"></div>
                <div class="container">
                    <div class="row slider-text justify-content-center align-items-center">

                        <div class="col-md-7 col-sm-12 text-center ftco-animate">
                            <h1 class="mb-3 mt-5 bread">Sign Up</h1>
                            <p class="breadcrumbs"><span class="mr-2"><a href="/">Home</a></span>
                                <span>Sign up</span>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </section>



        <div class="invoice-wrapper mt-5">
            <div class="invoice-header">
                <h1>Thank You For Your Order!</h1>
                <p>We appreciate your purchase.</p>
            </div>

            <div class="customer-info">
                <div class="section-title">Customer Details</div>
                <div class="info-row">
                    <p><strong>Name:</strong>
                        <%= order.name %>
                    </p>
                    <p><strong>Email:</strong>
                        <%= order.email %>
                    </p>
                    <p><strong>Phone:</strong>
                        <%= order.mo %>
                    </p>
                    <p><strong>Address:</strong>
                        <%= order.addre %>, <%= order.city %> - <%= order.pincode %>
                    </p>
                </div>
            </div>

            <div class="order-summary">
                <div class="section-title">Order Summary</div>
                <table>
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Price (₹)</th>
                            <th>Qty</th>
                            <th class="text-right">Total (₹)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% order.cartItems.forEach(item=> { %>
                            <tr>
                                <td>
                                    <%= item.name %>
                                </td>
                                <td>
                                    <%= item.price.toFixed(2) %>
                                </td>
                                <td>
                                    <%= item.quantity %>
                                </td>
                                <td class="text-right">
                                    <%= item.total.toFixed(2) %>
                                </td>
                            </tr>
                            <% }) %>
                    </tbody>
                    <tfoot>
                        <tr class="summary-footer">
                            <td colspan="3">Subtotal</td>
                            <td class="text-right">₹<%= order.subtotal.toFixed(2) %>
                            </td>
                        </tr>
                        <tr class="summary-footer">
                            <td colspan="3">Shipping</td>
                            <td class="text-right">₹<%= order.shipping.toFixed(2) %>
                            </td>
                        </tr>
                        <tr class="summary-footer">
                            <td colspan="3">Grand Total</td>
                            <td class="text-right">₹<%= order.grandTotal.toFixed(2) %>
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            <div class="btn-container">
                <a href="/" class="btn border-secondary px-4 py-3 text-primary text-uppercase mb-4 ms-4 w-100">Continue
                    Shopping</a>
            </div>
        </div>

        <%- include("./partials/footer.ejs") %>
            <%- include("./partials/script.ejs") %>
</body>

</html>