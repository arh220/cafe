<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs") %>

        <title>Sign up page</title>
</head>

<body>
    <%- include("./partials/nav.ejs") %>
        <section class="home-slider owl-carousel">

            <div class="slider-item" style="background-image: url(images/bg_3.jpg);"
                data-stellar-background-ratio="0.5">
                <div class="overlay"></div>
                <div class="container">
                    <div class="row slider-text justify-content-center align-items-center">

                        <div class="col-md-7 col-sm-12 text-center ftco-animate">
                            <h1 class="mb-3 mt-5 bread">Sign Up</h1>
                            <p class="breadcrumbs"><span class="mr-2"><a href="/">Home</a></span>
                                <span>Sign up</span>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </section>



        <section class="ftco-intro" style="min-height: 100vh; display: flex; align-items: center;">
            <div class="container-wrap w-100">
                <div class="d-flex justify-content-center w-100">
                    <div class="book p-4 w-100" style="max-width: 600px;">
                        <% if (error) { %>
                            <div class="alert alert-danger text-center">
                                <%= error %>
                            </div>
                            <% } %>
                                <h3 class="text-center mb-4">Sign Up</h3>
                                <form action="/signup" method="post" enctype="multipart/form-data"
                                    class="appointment-form">
                                    <div class="d-md-flex mb-3">
                                        <div class="form-group w-100 mr-md-2">
                                            <input type="text" name="name" class="form-control" placeholder="Name">
                                        </div>
                                    </div>
                                    <div class="d-md-flex mb-3">
                                        <div class="form-group w-100 mr-md-2">
                                            <input type="email" name="email" class="form-control" placeholder="Email">
                                        </div>

                                        <div class="form-group w-100 ml-md-2">
                                            <input type="password" name="pass" class="form-control"
                                                placeholder="PassWord">
                                        </div>
                                    </div>
                                    <div class="d-md-flex mb-3">
                                        <div class="form-group w-100 mr-md-2">
                                            <input type="tel" name="mo" class="form-control" placeholder="Mobile"
                                                maxlength="10" pattern="[0-9]{10}" id="mobile">
                                        </div>
                                        <div class="form-group w-100 ml-md-2">
                                            <input type="text" name="City" class="form-control" placeholder="City">
                                        </div>
                                    </div>
                                    <div class="d-md-flex mb-3">
                                        <div class="form-group w-100 mr-md-2">
                                            <input type="date" name="dob" id="dob" class="form-control custom-date"
                                                placeholder="Date Of Birth">
                                        </div>
                                        <div class="form-group w-100 ml-md-2">
                                            <input type="file" name="image" class="form-control" placeholder="Profile">
                                        </div>
                                    </div>
                                    <div class="d-md-flex mb-3">
                                        <div class="form-group w-100 ml-md-2 d-flex align-items-center">
                                            <label class="mr-3 mb-0">Gender:</label>
                                            <div class="form-check mr-3">
                                                <input class="form-check-input" type="radio" name="gender" id="male"
                                                    value="male">
                                                <label class="form-check-label" for="male">Male</label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="radio" name="gender" id="female"
                                                    value="female">
                                                <label class="form-check-label" for="female">Female</label>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="form-group text-center">
                                        <input type="submit" value="Sign Up" class="btn btn-white py-3 px-4">
                                    </div>
                                </form>
                                <div class="text-center mt-3">
                                    <a href="/signin">Sign in</a>
                                </div>
                    </div>
                </div>
            </div>
        </section>


        <%- include("./partials/footer.ejs") %>
            <%- include("./partials/script.ejs") %>
</body>

</html>