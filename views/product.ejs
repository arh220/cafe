<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/head.ejs") %>
        <title>Product page</title>
</head>

<body>
    <%- include("./partials/nav.ejs") %>

        <section class="home-slider owl-carousel">

            <div class="slider-item" style="background-image: url(images/bg_3.jpg);"
                data-stellar-background-ratio="0.5">
                <div class="overlay"></div>
                <div class="container">
                    <div class="row slider-text justify-content-center align-items-center">

                        <div class="col-md-7 col-sm-12 text-center ftco-animate">
                            <h1 class="mb-3 mt-5 bread">Our Menu</h1>
                            <p class="breadcrumbs"><span class="mr-2"><a href="/">Home</a></span>
                                <span>Menu</span>
                            </p>
                        </div>

                    </div>
                </div>
            </div>
        </section>
        <section class="ftco-menu mb-5 pb-5">
            <div class="container">
                <div class="row justify-content-center mb-5">
                    <div class="col-md-7 heading-section text-center ftco-animate">
                        <span class="subheading">Discover</span>
                        <h2 class="mb-4">Our Products</h2>
                        <p>Far far away …</p>
                    </div>
                </div>

                <div class="row d-md-flex">
                    <div class="col-lg-12 ftco-animate p-md-5">
                        <div class="row">
                            <div class="col-md-12 nav-link-wrap mb-5">
                                <div class="nav ftco-animate nav-pills justify-content-center" id="v-pills-tab"
                                    role="tablist" aria-orientation="vertical">
                                    <% allcat.forEach((cat, i)=> { %>
                                        <a class="nav-link <%= i === 0 ? 'active' : '' %>" id="v-pills-<%= i %>-tab"
                                            data-toggle="pill" href="#v-pills-<%= i %>" role="tab"
                                            aria-controls="v-pills-<%= i %>"
                                            aria-selected="<%= i === 0 ? 'true' : 'false' %>">
                                            <%= cat.catname %>
                                        </a>
                                        <% }) %>
                                </div>
                            </div>

                            <div class="col-md-12 d-flex align-items-center">
                                <div class="tab-content ftco-animate" id="v-pills-tabContent">
                                    <% allcat.forEach((cat, i)=> { %>
                                        <div class="tab-pane fade <%= i === 0 ? 'show active' : '' %>"
                                            id="v-pills-<%= i %>" role="tabpanel"
                                            aria-labelledby="v-pills-<%= i %>-tab">
                                            <div class="row">
                                                <% allmenu .filter(p=> p.catid && p.catid._id.toString() ===
                                                    cat._id.toString())
                                                    .forEach(prod => { %>
                                                    <div class="col-md-4 text-center">
                                                        <div class="menu-wrap">
                                                            <a href="#" class="menu-img img mb-4"
                                                                style="background-image: url('<%= prod.image %>');"></a>
                                                            <div class="text">
                                                                <h3><a href="#">
                                                                        <%= prod.itemname %>
                                                                    </a></h3>
                                                                <p>
                                                                    <%= prod.disc %>
                                                                </p>
                                                                <p class="price"><span>₹<%= prod.mrp %></span></p>
                                                                <p><a href="/cart"
                                                                        class="btn btn-primary btn-outline-primary"
                                                                        onclick='addToCart({
     id: "<%= prod._id %>",
     itemname: "<%= prod.itemname %>",
     price: "<%= prod.mrp %>",
     image: "<%= prod.image %>",
     qty: 1
   }); return true;'>Add to cart</a>
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <% }) %>
                                                        <% if (!allmenu.some(p=> p.catid && p.catid._id.toString() ===
                                                            cat._id.toString())) { %>
                                                            <div class="col-12">
                                                                <p class="text-muted">No products available in this
                                                                    category.</p>
                                                            </div>
                                                            <% } %>
                                            </div>
                                        </div>
                                        <% }) %>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>

        <%- include("./partials/footer.ejs") %>
            <%- include("./partials/script.ejs") %>
</body>

</html>